/*
 * Function : oc_poll()
 * Note     : Poll a channel with a timeout
 * Returns  : 0 : no error
 *            1 : hit detected
 */
t_bool oc_poll (SERHANDLE channel, int p)
{
fd_set s;
struct timeval t;

t.tv_sec = 0;
t.tv_usec = p;

FD_ZERO (&s);
FD_SET (channel->port, &s);

select (FD_SETSIZE, &s, NULL, NULL, &t);

if (FD_ISSET (channel->port, &s))
    return TRUE;

return FALSE;
}

